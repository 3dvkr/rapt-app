<p id="demoMemo" class="hide">Please note this app is in demo mode. Time runs a little faster here.</p>
<div id="countdown">
    <p id="countdownP" class="">0:00</p>
</div>
<% if (baseUrl==="/main" ) { %>
    <form id="workForm" method="POST" action="/main">
<% } else { %>
    <form id="workForm">
<% } %>
    <div id="workFormMain">
        <h2 class="instructions">Preset times:</h2>
        <label class="selected btn" for="workSelect">Work</label>
        <input type="radio" id="workSelect" class="sessionOption" name="sessionType" value="work"
            checked>
        <label class="btn" for="breakSelect">Break</label>
        <input type="radio" id="breakSelect" class="sessionOption" name="sessionType" value="break">
        <label class="instructions" for="sessionTimer">Set Timer </label>
        <input type="number" id="sessionTimer" name="duration" min=0 max=60>
        <button type="button" id="startBtn" class="btn">Start Timer</button>
        <button id="enable" type="button" class="btn">Enable Notifications</button>
        <div id="demoSwitch">
            <label for="demo">Demo mode</label>
            <input type="range" id="demo" name="demo" min="0" max="1">
        </div>
    </div>

    <div id="modalFade" class="hide">
        <div id="modal">
            <p id="sessionInfo">Session Info</p>
            <label for="memo">Add Memo?</label>
            <input type="text" id="memo" name="memo" placeholder="(optional)">
            <section id="buttonMenu">
                <% if (baseUrl==="/main" ) { %>
                    <button type="submit" id="submitBtn" class="btn">Submit Session</button>
                <% } else { %>
                    <button type="button" id="submitBtn" class="btn">Add Session</button>
                <% } %>
                
                <button type="button" id="closeModal" class="btn">Close without Submitting</button>
            </section>
        </div>
    </div>
</form>